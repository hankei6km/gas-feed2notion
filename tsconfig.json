{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": [ "ESNext" ],
    "types": [
       "@types/jest",
       "@types/google-apps-script",
    ],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "build",
    "esModuleInterop": true,
    "allowJs":true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src/**/*.ts","test/**/*.ts"]
}
